<div class = "center"><h1> Add New Album </h1>

 <form method="POST" action="/albums">

 <label> 
   <select name="artist_id">
     <% for artist in @artists %>
     <option value ="<%= artist.id %>"><%= artist.name %></option>
     <% end %>
   </select>
 </label>

 <label for="title">Title:</label>
 <input type="text" id = "title" name="title"/>

 <label>
  <select name="genre_id">
    <% for genre in @genres %> 
    <option value ="<%=genre.id %>"><%= genre.genre %>
      </option>
    <%end %>
    </select>
</label>
 
 <label for="quantity">Number of Copies:</label>
 <input type="number" name="quantity" id="quantity" min=0/>

 <label for="retail">Selling Price:</label>
 <input type="number" step="0.01" name="retail" id="retail">

 <label for="wholesale">Cost:</label>
 <input type="number" step="0.01" name="wholesale" id="wholesale">

  <input class="btn btn--action" type='submit' value="Add to Stock">
</form>
</div>
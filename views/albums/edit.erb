<div class = "center"><h1>Update Album Details</h1>

<form method="POST" action="/albums/<%= @album.id %>">
  <label for="title">Title:</label>
  <input
  type="text"
  id="title"
  name="title"
  value="<%= @album.title %>"
  />

  <label for="artist">Artist:</label>
    <select name="artist_id">
      <% for artist in @artists %>
      <option value ="<%= artist.id %>" selected= "<%= @album.artist_id %>"><%= artist.name %></option>
      <% end %>
    </select>
  

  <label for="genre_id">Genre:</label>
   <select name="genre_id">
     <% for genre in @genres %> 
      <option value ="<%=genre.id %>" selected="<%= @album.genre_id %>"><%= genre.genre %>
       </option>
     <%end %>
   </select>
  

<!--   <label for="genre">Genre:</label>
  <input 
  type="text"
  id="genre"
  name="genre"
  value="<%= @album.genre.genre %>"
  />
 -->
  <label for="quantity">Number of Copies:</label>
  <input 
  type="number"
  id="quantity"
  name="quantity"
  value="<%= @album.quantity %>"
  min="0"
  step="1"
  />

  <label for="retail">Selling Price:</label>
  <input
  type = "number"
  id = "retail"
  name = "retail"
  value = "<%= @album.retail %>"
  min="0"
  step ="0.01"
  />


  <label for="wholesale">Cost Price:</label>
  <input
  type = "number"
  id = "wholesale"
  name = "wholesale"
  value = "<%= @album.wholesale %>"
  min="0"
  step ="0.01"
  />

  <input class="btn" type="submit" value="Update Details"/>

</form>
</div>